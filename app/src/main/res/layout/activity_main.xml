<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.riki.implicitintent.MainActivity">

    <TextView
        android:text="Implicit Intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/title"
        android:textSize="30sp" />

    <Button
        android:text="open web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:onClick="doSomething"
        android:id="@+id/OpenWeb" />

    <Button
        android:text="open map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opencall"
        android:layout_alignRight="@+id/opencall"
        android:layout_alignEnd="@+id/opencall"
        android:onClick="doSomething"
        android:layout_marginTop="30dp"
        android:id="@+id/openmap" />

    <Button
        android:text="open call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opencall"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/OpenWeb"
        android:layout_alignEnd="@+id/OpenWeb"
        android:onClick="doSomething"/>
</RelativeLayout>
